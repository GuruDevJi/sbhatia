<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css" />

  <link rel="icon" type="image/png" href="/assets/images/sbavatarnbg.png" sizes="32x32">
  
  {% if title == "Home" %}
    <link rel="stylesheet" href="/assets/css/home.css" />
  {% elif title == "Profile" %}
    <link rel="stylesheet" href="/assets/css/profile.css" />
  {% elif title == "Specializations" %}
    <link rel="stylesheet" href="/assets/css/specializations.css" />
  {% elif title == "Speaker Gallery" %}
    <link rel="stylesheet" href="/assets/css/speaker-gallery.css" />
  {% elif title == "Projects" %}
    <link rel="stylesheet" href="/assets/css/projects.css" />
  {% elif title == "Blog" %}
    <link rel="stylesheet" href="/assets/css/blog.css" />
  {% endif %}
</head>
<body
  {% if title == "Home" %}class="home" style="font-family:Consolas,monospace;"
  {% elif title == "Profile" %}class="profile"
  {% elif title == "Specializations" %}class="specializations"
  {% elif title == "Speaker Gallery" %}class="speaker-gallery"
  {% elif title == "Contact" %}class="contact"
  {% elif title == "Projects" %}class="projects"
  {% elif title == "Blog" %}class="blog"
  {% endif %}
>
  <header>
    {% if title != "Home" %}
    <div class="logo-pill">
      <a href="/" class="brand-link">
        <div class="brand-avatar">
          <img src="/assets/images/sbavatarnbg.png" alt="SB">
        </div>
        <span class="brand-name full-name navbar-brand-text">{{ var.siteTitle }}</span>
        <span class="brand-name mobile-name">SB</span>
      </a>
    </div>
    {% else %}
    <div></div> {# Empty div to maintain space between menu toggle and dock-nav if needed #}
    {% endif %}
    <nav>
      <button class="menu-toggle" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false">
        <span class="menu-icon">&#9776;</span>
      </button>
      <div class="dock-nav">
          <a href="/profile/" class="dock-item" data-page="profile">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="dock-label">Profile</span>
          </a>
          <a href="/specializations/" class="dock-item" data-page="specializations">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            <span class="dock-label">Specializations</span>
          </a>
          <a href="/speaker-gallery/" class="dock-item" data-page="speaker-gallery">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"></path>
              <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
              <line x1="12" y1="19" x2="12" y2="22"></line>
            </svg>
            <span class="dock-label">Speaker Gallery</span>
          </a>
          <a href="/projects/" class="dock-item" data-page="projects">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
            </svg>
            <span class="dock-label">Projects</span>
          </a>
          <a href="/blog/" class="dock-item" data-page="blog">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span class="dock-label">Blog</span>
          </a>
          <a href="/contact/" class="dock-item" data-page="contact">
            <svg class="dock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span class="dock-label">Contact</span>
          </a>
      </div>
      <div id="mobile-menu" class="mobile-menu-panel" hidden>
        <a href="/profile/" class="nav-link nav-profile">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span>Profile</span>
        </a>
        <a href="/specializations/" class="nav-link nav-specializations">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
          </svg>
          <span>Specializations</span>
        </a>
        <a href="/speaker-gallery/" class="nav-link nav-speaker">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"></path>
            <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
            <line x1="12" y1="19" x2="12" y2="22"></line>
          </svg>
          <span>Speaker Gallery</span>
        </a>
        <a href="/projects/" class="nav-link nav-projects">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
          </svg>
          <span>Projects</span>
        </a>
        <a href="/blog/" class="nav-link nav-blog">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          <span>Blog</span>
        </a>
        <a href="/contact/" class="nav-link nav-contact">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <span>Contact</span>
        </a>
      </div>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    
  <!-- Leadership Quote of the Day (global) -->
    {#
    <div id="leadership-quote" class="quote-container-simple">
      <div style="display:flex;align-items:center;gap:1rem;width:100%;margin-bottom:0.5rem;">
        <blockquote id="quote-text" style="margin:0;padding:0;background:none;border:none;box-shadow:none;">
          <span class="quote-loading">Fetching daily quote...</span>
        </blockquote>
      </div>
    </div>
    #}
  <p style="font-size:0.95rem;font-style:italic;">&copy; {{ var.currentYear }} {{ var.siteName }}</p>
  <footer>
    
  </footer>
  <script src="/assets/js/main.js"></script>
</body>
</html>
