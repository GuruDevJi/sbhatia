<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css" />
  
  {% if title == "Home" %}
    <link rel="stylesheet" href="/assets/css/home.css" />
  {% elif title == "Profile" %}
    <link rel="stylesheet" href="/assets/css/profile.css" />
  {% elif title == "Specializations" %}
    <link rel="stylesheet" href="/assets/css/specializations.css" />
  {% elif title == "Speaker Gallery" %}
    <link rel="stylesheet" href="/assets/css/speaker-gallery.css" />
  {% elif title == "Projects" %}
    <link rel="stylesheet" href="/assets/css/projects.css" />
  {% endif %}
</head>
<body
  {% if title == "Home" %}class="home" style="font-family:Consolas,monospace;"
  {% elif title == "Profile" %}class="profile"
  {% elif title == "Specializations" %}class="specializations"
  {% elif title == "Speaker Gallery" %}class="speaker-gallery"
  {% elif title == "Contact" %}class="contact"
    {% elif title == "Projects" %}class="projects"
  {% endif %}
>
  <header>
    <h1><a href="/" style="color:inherit;text-decoration:none;">{{ var.siteTitle }}</a></h1>
    <nav>
      <button class="menu-toggle" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false">
        <span class="menu-icon">&#9776;</span>
      </button>
      <div class="nav-links">
          <a href="/profile/" class="nav-link nav-profile">&nbsp;&nbsp;Profile&nbsp;&nbsp;</a>
          <a href="/specializations/" class="nav-link nav-specializations">&nbsp;&nbsp;Specializations&nbsp;&nbsp;</a>
          <a href="/speaker-gallery/" class="nav-link nav-speaker">&nbsp;&nbsp;Speaker Gallery&nbsp;&nbsp;</a>
          <a href="/projects/" class="nav-link nav-projects">&nbsp;&nbsp;Projects&nbsp;&nbsp;</a>
          <a href="/contact/" class="nav-link nav-contact">&nbsp;&nbsp;Contact</a>
      </div>
      <div id="mobile-menu" class="mobile-menu-panel" hidden>
        <a href="/profile/" class="nav-link nav-profile">Profile</a>
        <a href="/specializations/" class="nav-link nav-specializations">Specializations</a>
        <a href="/speaker-gallery/" class="nav-link nav-speaker">Speaker Gallery</a>
        <a href="/projects/" class="nav-link nav-projects">Projects</a>
        <a href="/contact/" class="nav-link nav-contact">Contact</a>
      </div>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>&copy; {{ var.currentYear }} {{ var.siteName }}</p>
  </footer>

  <script src="/assets/js/main.js"></script>
</body>
</html>
