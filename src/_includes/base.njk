<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css" />
  {# Only include specializations.css for the Specializations page #}
  {% if title == "Specializations" %}
    <link rel="stylesheet" href="/assets/css/specializations.css" />
  {% endif %}
</head>
<body>
  <header>
    <h1>{{ var.siteTitle }}</h1>
    <nav>
      <a href="/" class="nav-link nav-home">Home</a>
      <a href="/profile/" class="nav-link nav-profile">Profile</a>
      <a href="/specializations/" class="nav-link nav-specializations">Specializations</a>
      <a href="/speaker-gallery/" class="nav-link nav-speaker">Speaker Gallery</a>
      <a href="/contact/" class="nav-link nav-contact">Contact</a>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>&copy; {{ var.currentYear }} {{ var.siteName }}</p>
  </footer>

  <script src="/assets/js/main.js"></script>
</body>
</html>
