<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css" />
  
  {% if title == "Home" %}
    <link rel="stylesheet" href="/assets/css/home.css" />
  {% elif title == "Profile" %}
    <link rel="stylesheet" href="/assets/css/profile.css" />
  {% elif title == "Specializations" %}
    <link rel="stylesheet" href="/assets/css/specializations.css" />
  {% endif %}
</head>
<body
  {% if title == "Home" %}class="home"
  {% elif title == "Profile" %}class="profile"
  {% elif title == "Specializations" %}class="specializations"
  {% elif title == "Speaker Gallery" %}class="speaker-gallery"
  {% elif title == "Contact" %}class="contact"
  {% endif %}
>
  <header>
    <h1><a href="/" style="color:inherit;text-decoration:none;">{{ var.siteTitle }}</a></h1>
    <nav>
      {# Home link removed as requested #}
      <a href="/profile/" class="nav-link nav-profile">Profile</a>
      <a href="/specializations/" class="nav-link nav-specializations">Specializations</a>
      <a href="/speaker-gallery/" class="nav-link nav-speaker">Speaker Gallery</a>
      <a href="/contact/" class="nav-link nav-contact">Contact</a>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>&copy; {{ var.currentYear }} {{ var.siteName }}</p>
  </footer>

  <script src="/assets/js/main.js"></script>
</body>
</html>
